<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Meditation.MeditationSettingsActivity">
    <TextView
        android:id="@+id/lbl_youtube_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:text="@string/labelYouTubeLink"/>
    <EditText
        android:id="@+id/txt_youtube_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/lbl_youtube_link"
        app:layout_constraintEnd_toStartOf="@id/btn_update_youtube_link"
        app:layout_constraintTop_toBottomOf="@id/lbl_youtube_link"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:inputType="textUri"/>
    <Button
        android:id="@+id/btn_update_youtube_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_youtube_link"
        app:layout_constraintBottom_toBottomOf="@id/txt_youtube_link"
        android:layout_marginEnd="10dp"
        android:text="@string/update" />

</android.support.constraint.ConstraintLayout>