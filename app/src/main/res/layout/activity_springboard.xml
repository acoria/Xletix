<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yolo.Springboard.SpringboardActivity"
    android:background="@color/background_springboard">
    <android.support.constraint.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline_row_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline_row_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66"/>
    <ImageButton
        android:id="@+id/button_meditation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_middle"
        app:layout_constraintBottom_toBottomOf="@id/guideline_row_1"
        android:src="@drawable/meditation"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/background_springboard"/>
    <ImageButton
        android:id="@+id/button_back_stretches"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_row_1"
        android:src="@drawable/back_stretches"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/background_springboard"/>
    <ImageButton
        android:id="@+id/button_snowboard_intermediate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline_row_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_middle"
        app:layout_constraintBottom_toBottomOf="@id/guideline_row_2"
        android:src="@drawable/intermediate_snowboard_workout"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/background_springboard"/>
    <ImageButton
        android:id="@+id/button_snowboard_stretches"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/guideline_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_row_1"
        app:layout_constraintBottom_toBottomOf="@id/guideline_row_2"
        android:src="@drawable/snowboard_stretches"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/background_springboard"/>
    <ImageButton
        android:id="@+id/button_xletix"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline_row_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_middle"
        android:scaleType="fitCenter"
        android:src="@drawable/xletix"
        android:backgroundTint="@color/background_springboard"/>
</android.support.constraint.ConstraintLayout>